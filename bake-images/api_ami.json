{
    "variables": {
      "aws_access_key": "{{env `ACCESS_KEY`}}",
      "aws_secret_key": "{{env `SECRET_KEY`}}"
    },
    "builders": [{
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-west-2",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "api-ami {{timestamp}}", 
      "ami_description": "API AMI - EC2 AMI Ubuntu 18.04",
      "tags": {
          "Name": "API-Authors-Haven",
          "role": "Authors Haven API"
      }
    }],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "api.yml"
        }
    ]
  }